# Run the container with `docker run -p 3000:3000 -t poc-ai`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system poc-ai && \
          adduser --system -G poc-ai poc-ai

COPY dist/apps/poc-ai poc-ai
RUN chown -R poc-ai:poc-ai .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix poc-ai --omit=dev -f install

CMD [ "node", "poc-ai" ]
